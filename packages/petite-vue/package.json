{
  "name": "petite-vue",
  "version": "0.4.1",
  "description": "A subset of Vue optimized for progressive enhancement",
  "files": [
    "dist"
  ],
  "main": "dist/petite-vue.prod.umd.js",
  "unpkg": "dist/petite-vue.prod.iife.js",
  "jsdelivr": "dist/petite-vue.prod.iife.js",
  "module": "./dist/petite-vue.prod.es.js",
  "exports": {
    ".": {
      "import": "./dist/petite-vue.prod.es.js",
      "require": "./dist/petite-vue.prod.umd.js"
    }
  },
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "serve": "vite",
    "build": "pnpm run build:all",
    "build:all": "rm -rf ../../dist/packages/petite-vue && pnpm run build:dev && pnpm run build:prod && pnpm run build:types",
    "build:dev": "MODE=dev vite build --mode development",
    "build:prod": "MODE=prod vite build --mode production",
    "build:types": "tsc --emitDeclarationOnly && mv ../../dist/packages/petite-vue/src ../../dist/packages/petite-vue/types"
  },
  "license": "MIT",
  "devDependencies": {}
}
